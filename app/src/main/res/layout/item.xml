<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_margin="20dp"
        android:src="@drawable/nasgor"
        >
    </ImageView>

    <TextView
        android:id="@+id/name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image_item"
        app:layout_constraintLeft_toRightOf="@id/image_item"
        android:layout_marginHorizontal="20dp"
        android:text="Nasi Goreng"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        >
    </TextView>

    <TextView
        android:id="@+id/kkal_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/name_item"
        app:layout_constraintLeft_toLeftOf="@id/name_item"
        android:text="300 KKal"
        >
    </TextView>

    <TextView
        android:id="@+id/price_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/kkal_item"
        app:layout_constraintLeft_toLeftOf="@id/name_item"
        android:text="10000"
        >
    </TextView>

    <ImageButton
        android:id="@+id/btn_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_favorite_24"
        android:layout_marginHorizontal="30dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>